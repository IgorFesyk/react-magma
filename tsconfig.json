{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": false,
    "experimentalDecorators": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "react-magma-dom": ["packages/react-magma-dom"],
      "react-magma-dom/*": ["packages/react-magma-dom/*"],
      "react-magma-icons": ["packages/react-magma-icons"],
      "react-magma-icons/*": ["packages/react-magma-icons/*"]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}