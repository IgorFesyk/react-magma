{
  "packages": [
    "website/*",
    "packages/*",
    "patterns/*"
  ],
  "command": {
    "bootstrap": {
      "forceLocal": true,
      "hoist": true
    },
    "publish": {
      "allowBranch": ["master", "dev", "hotfix/*", "main"],
      "preDistTag": "next",
      "message": "chore(release): publish"
    },
    "version": {
      "changelogPreset": "conventionalcommits",
      "conventionalCommits": true,
      "exact": true
    }
  },
  "version": "independent",
  "granularPathspec": false
}
