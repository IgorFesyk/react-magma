{
  "packages": [
    "packages/react-magma-docs",
    "packages/react-magma-dom",
    "packages/react-magma-icons",
    "packages/react-magma-landing"
  ],
  "command": {
    "bootstrap": {
      "forceLocal": true,
      "hoist": [
       "**"
      ],
      "nohoist": [
        "react-magma-legacy-selects"
      ]
    },
    "publish": {
      "allowBranch": ["master", "dev", "hotfix/*", "main"],
      "preDistTag": "next",
      "message": "chore(release): publish"
    },
    "version": {
      "changelogPreset": "conventionalcommits",
      "conventionalCommits": true,
      "exact": true
    }
  },
  "version": "independent",
  "granularPathspec": false
}
