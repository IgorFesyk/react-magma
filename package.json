{
  "name": "react-magma",
  "version": "0.1.0-SNAPSHOT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap && npm run build && npm run createStaticFile",
    "test": "lerna run --scope react-magma-dom --scope react-magma-core test && npm run report",
    "test-watch": "jest --watch",
    "report": "mkdir -p .nyc_output && istanbul-merge ./packages/*/coverage/*.json --out .nyc_output/coverage.json && nyc report --reporter=lcov --reporter=text",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint",
    "docs": "lerna exec --scope react-magma-docs docz dev",
    "createStaticFile": "echo 'pushstate: enabled' >| packages/react-magma-docs/.docz/dist/Staticfile",
    "cm": "git-cz",
    "cm-retry": "git-cz --retry"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run lint && npm run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.0-rc.14",
    "istanbul-merge": "^1.1.1",
    "jest": "^23.6.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.1.4",
    "nyc": "^13.0.1",
    "ts-jest": "^23.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
