{
  "name": "react-magma",
  "version": "1.0.1-beta.1",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap && npm run build && npm run createStaticFile",
    "test": "lerna run test --scope react-magma-dom && npm run report",
    "test-watch": "lerna exec --scope react-magma-dom 'npm t -- --watch'",
    "test-dom": "lerna exec --scope react-magma-dom 'npm t -- --watch --coverage=false'",
    "test-core": "lerna exec --scope react-magma-core 'npm t -- --watch --coverage=false'",
    "report": "mkdir -p .nyc_output && istanbul-merge ./packages/*/coverage/*.json --out .nyc_output/coverage.json && nyc report --reporter=lcov --reporter=text",
    "build": "lerna run build --scope react-magma-dom --scope react-magma-docs",
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint",
    "docs": "lerna exec --scope react-magma-docs gatsby develop",
    "createStaticFile": "echo 'pushstate: enabled' >| packages/react-magma-docs/public/Staticfile",
    "cm": "git-cz",
    "cm-retry": "git-cz --retry",
    "bump:patch": "lerna version --conventional-commits",
    "bump:pre": "lerna version --conventional-commits --conventional-prerelease --yes",
    "bump:release": "lerna version --conventional-commits --conventional-graduate --yes",
    "publish-all": "lerna exec --scope react-magma-dom 'npm publish'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run lint && npm run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^3.1.0",
    "istanbul-merge": "^1.1.1",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.22.1",
    "nyc": "^13.0.1",
    "terser": "^4.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
