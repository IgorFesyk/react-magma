{
  "name": "react-magma",
  "version": "1.0.1-beta.1",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap && npm run build",
    "test": "lerna run test --scope react-magma-dom --scope react-magma-icons",
    "test-watch": "lerna exec --scope react-magma-dom 'npm t -- --watch'",
    "test-dom": "lerna exec --scope react-magma-dom 'npm t -- --watch --coverage=false'",
    "test-core": "lerna exec --scope react-magma-core 'npm t -- --watch --coverage=false'",
    "build": "lerna run build --stream --no-progress --scope react-magma-dom --scope react-magma-icons --scope react-magma-docs",
    "bootstrap": "lerna bootstrap --ci",
    "lint": "lerna run lint",
    "docs": "lerna exec --scope react-magma-docs gatsby develop",
    "cm": "git-cz",
    "cm-retry": "git-cz --retry",
    "bump:patch": "lerna version --conventional-commits",
    "bump:pre": "lerna version --conventional-commits --conventional-prerelease --yes",
    "bump:release": "lerna version --conventional-commits --conventional-graduate --yes",
    "publish-all": "lerna exec --scope react-magma-dom 'npm publish'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run lint && npm run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.6.1",
    "@commitlint/config-conventional": "7.6.0",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "husky": "3.1.0",
    "lerna": "3.22.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "jest-axe": "3.1.0"
  }
}
