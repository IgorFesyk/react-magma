{
  "name": "react-magma",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cengage/react-magma.git"
  },
  "scripts": {
    "postinstall": "npm run bootstrap && npm run build:lite",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-dom": "lerna run test --scope react-magma-dom -- --watch --coverage=false",
    "build:docs": "lerna run build --scope react-magma-docs --stream --no-progress",
    "build:lite": "lerna run build --ignore react-magma-docs --stream --no-progress",
    "build": "lerna run build --stream --no-progress",
    "bootstrap": "lerna bootstrap && rimraf packages/react-magma-docs/node_modules/react packages/react-magma-docs/node_modules/react-dom",
    "lint": "lerna run lint",
    "develop": "npm run docs",
    "docs": "lerna exec --scope react-magma-docs gatsby develop",
    "clean": "lerna exec --scope react-magma-docs 'gatsby clean' && lerna clean --yes && rimraf node_modules",
    "cm": "git-cz",
    "cm-retry": "git-cz --retry",
    "check:spelling": "cspell --config=.cspell.json packages/**/*.{md,ts,js,mdx,tsx,jsx}",
    "publish": "lerna publish",
    "prettier": "prettier --write --loglevel warn --ignore-path .eslintignore \"**/src/**/*.{js,jsx,ts,tsx,md,mdx,json,html,css,yml,yaml,graphql}\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@emotion/core": "^10.0.35",
    "@testing-library/dom": "^7.24.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^12.1.5",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.2.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-polished": "^1.1.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "core-js": "^3.1.4",
    "cspell": "^4.1.0",
    "cspell-dict-es-es": "^1.0.19",
    "cspell-dict-lorem-ipsum": "^1.0.13",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-cengage": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-unicorn": "^22.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-axe": "3.1.0",
    "jest-dom": "^4.0.0",
    "jest-emotion": "^10.0.32",
    "jest-extended": "^0.11.5",
    "jest-watch-typeahead": "^0.6.1",
    "lerna": "3.22.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "react": "^16.10.0",
    "react-dom": "^16.10.0",
    "regenerator-runtime": "^0.13.7",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
