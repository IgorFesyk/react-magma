{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
