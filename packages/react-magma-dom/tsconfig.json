{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
